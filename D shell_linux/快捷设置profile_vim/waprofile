#------------------------------------------------------------------------------------------
#										颜色列表
#------------------------------------------------------------------------------------------
BLUE="\033[0;34m"
LIGHTBLUE="\033[0;1;34m"
GREEN="\033[0;32m"
LIGHTGREEN="\033[0;1;32m"
CYAN="\033[0;36m"
LIGHTCYAN="\033[0;1;36m"
RED="\033[31m"
LIGHTRED="\033[0;1;31m"
WHITE="\033[37m"
LIGHTWHITE="\033[0;1;37m"
BLINKLIGHTWHITE="\033[0;1;5;37m"
END="\033[0m"


#------------------------------------------------------------------------------------------
#										设置PS1
#------------------------------------------------------------------------------------------
export PS1="$LIGHTRED[$LIGHTCYAN\u$LIGHTWHITE:$LIGHTBLUE\t$LIGHTRED]$BLINKLIGHTWHITE:$LIGHTGREEN\w\n$WHITE->$END"


#------------------------------------------------------------------------------------------
#										设置ls显示的文件颜色
#------------------------------------------------------------------------------------------
export LS_COLORS="di=34:fi=37:ln=33:*.sh=32:ex=31:"


#--------------------------------------------------------------------------------------------
#									 	系统命令alias 
#------------------------------------------------------------------------------------------

alias ls="ls --color"
alias ll="ls -al --color"

#--------------------------------------------------------------------------------------------
#									 	目录切换 
#------------------------------------------------------------------------------------------
alias wa="cd /work/wa"
alias src="cd /work/wa/TFS_D1.0/src/"
alias dp="cd /work/wa/TFS_D1.0/src/dplane"
alias tfs="cd /work/wa/TFS_D1.0/src/dplane/tfs"
